<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numberOne"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="number one"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/numberTwo"
        app:layout_constraintStart_toStartOf="@+id/numberTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberTwo"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="number two"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOne" />

    <TextView
        android:id="@+id/Sonuc"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginBottom="272dp"
        android:text="Sonuc :"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="363dp"
        android:layout_height="78dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Sonuc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberTwo">

        <Button
            android:id="@+id/buttonArti"
            android:layout_width="59dp"
            android:layout_height="41dp"
            android:layout_margin="15dp"
            android:layout_marginStart="4dp"
            android:text="+" />

        <Button
            android:id="@+id/buttonEksi"
            android:layout_width="61dp"
            android:layout_height="43dp"
            android:layout_margin="15dp"
            android:layout_marginStart="4dp"
            android:text="-" />

        <Button
            android:id="@+id/buttonCarpi"
            android:layout_width="61dp"
            android:layout_height="43dp"
            android:layout_margin="15dp"
            android:layout_marginStart="4dp"
            android:text="*" />

        <Button
            android:id="@+id/buttonBolu"
            android:layout_width="61dp"
            android:layout_height="43dp"
            android:layout_margin="15dp"
            android:layout_marginStart="4dp"
            android:text="/" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>